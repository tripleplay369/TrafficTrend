{
  "manifest_version": 2,

  "name": "Traffic Trend",
  "description": "Displays the current trend for traffic between two locations (increasing or decreasing)",
  "version": "1.0",

  "browser_action": {
    "default_icon": "default.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["traffic.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
